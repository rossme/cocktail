<div class="container">
  <div class="row pt-4">
    <div class="jumbotron w-100" style="background-image: url('https://res.cloudinary.com/djnfnwxgu/image/upload/v1598173905/le_cocktail_neon_eylbvn.gif'); height: 801px;">
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="cards" style="margin-top: 40px 30px;">
        <% @cocktails.each do |cocktail| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
            <%= link_to cocktail.name, cocktail_path(cocktail)%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

