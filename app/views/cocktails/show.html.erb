<div class="container">
  <div class="row">
    <div class="col">
      <div class="cocktail-list p-2">
        <h5><strong><%= @cocktail.name %></strong></h5>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
          <p><%= link_to "Add Another", new_cocktail_path %></p>
          <p><%= link_to "Cocktail List", cocktails_path %></p>
      </div>
    </div>
  </div>
</div>

<!-- COCKTAIL DETAILS -->

<p><%= link_to 'Delete', cocktail_path(@cocktail),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-primary" %></p>
<p><%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
<p><%= link_to "Cocktail List", cocktails_path, class: "btn btn-primary" %></p>

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= @cocktail.name %></h5>
    <% @cocktail.doses.each do |dose| %>
    <p class="card-text"><%= dose.ingredient.name %><br><%= dose.ingredient.name %></p>
    <% end %>
    <p><%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
    <p><%= link_to "Cocktail List", cocktails_path, class: "btn btn-primary" %></p>
    </div>
</div>